<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/post_ROOT"
    android:orientation="vertical"

    android:clickable="true"
    android:focusableInTouchMode="true"

    tools:context="com.example.arif.digitalbloodbank.home.Request_Blood">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="vertical">


        <EditText
            android:id="@+id/post_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.5"
            android:hint="Patient Name"
            android:inputType="text"
            android:textColorHint="#ff8a80" />

        <EditText
            android:id="@+id/post_hospital"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.5"
            android:hint="Patient Hospital Details"
            android:inputType="text"
            android:textColorHint="#ff8a80" />

        <EditText
            android:id="@+id/post_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.5"
            android:hint="Phone"
            android:inputType="phone"
            android:textColorHint="#ff8a80" />


        <Button
            android:id="@+id/post_time_picker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.5"
            android:background="#ff00"
            android:text="Time"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/post_date_picker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.5"
            android:background="#ff00"
            android:text="Date"
            android:textColor="#ffffff"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/post_blood_group"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:animateLayoutChanges="true"
            android:backgroundTint="#ff00"
            android:popupBackground="#ff00"
            android:spinnerMode="dropdown"></Spinner>

        <Spinner
            android:id="@+id/post_location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:animateLayoutChanges="true"
            android:backgroundTint="#ff00"
            android:popupBackground="#ff00"
            android:spinnerMode="dropdown"></Spinner>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        android:weightSum="10">

        <Button
            android:id="@+id/post_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:background="#ff00"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/post_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:background="#ff00"
            android:text="Post"
            android:textColor="#ffffff"
            android:textStyle="bold" />


    </LinearLayout>
    </LinearLayout>

    </ScrollView>

</LinearLayout>
